        {
          "id": "polling_interval",
          "type": "number",
          "value": 60,
          "label": {
            "en": "Polling interval for data collection, in seconds"
          }
        }
      ]
    },
    {
      "id": "inverter",
      "name": {
        "en": "Inverter"
      },
      "class": "solarpanel",
      "capabilities": [
        "measure_power",
        "measure_current.AC",
        "measure_current.DC",
        "measure_voltage.AC",
        "measure_voltage.DC",
        "meter_power",
        "meter_power.YEAR",
        "meter_power.TOTAL"
      ],
      "capabilitiesOptions": {
        "meter_power": {
          "title": {
            "en": "Daily Production"
          }
        },
        "meter_power.YEAR": {
          "title": {
            "en": "Yearly Production"
          }
        },
        "meter_power.TOTAL": {
          "title": {
            "en": "Total Production"
          }
        },
        "measure_current.AC": {
          "title": {
            "en": "AC current"
          }
        },
        "measure_current.DC": {
          "title": {
            "en": "DC current"
          }
        },
        "measure_voltage.AC": {
          "title": {
            "en": "AC voltage"
          }
        },
        "measure_voltage.DC": {
          "title": {
            "en": "DC voltage"
          }
        }
      },
      "images": {
        "large": "/drivers/inverter/assets/images/large.jpg",
        "small": "/drivers/inverter/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "enter_ip",
          "next": "list_devices"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "prev": "enter_ip",
            "next": "add_devices"
          },
          "options": {
            "singular": false
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "ip",
          "type": "text",
          "label": {
            "en": "Fronius Datamanager IP address"
          }
        },
        {
          "id": "DeviceId",
          "type": "number",
          "label": {
            "en": "Fronius inverter DeviceId"
          }
        },
        {
          "id": "PVPower",
          "type": "number",
          "label": {
            "en": "PV power connected to this inverter (in watts)"
          }
        },
        {
          "id": "polling_interval",
          "type": "number",
          "value": 60,
          "label": {
            "en": "Polling interval for data collection, in seconds"
          }
        }
      ]
    }
